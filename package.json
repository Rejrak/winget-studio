{
  "name": "winget-gui",
  "version": "0.1.0",
  "license": "SEE LICENSE IN LICENSE.txt",
  "description": "Winget Studio - desktop UI for installing, updating, and removing apps with winget.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "build:css": "tailwindcss -c tailwind.config.js -i ./assets/styles/tailwind.css -o ./assets/styles/app.css --minify"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "tailwindcss": "^3.4.1"
  },
  "build": {
    "appId": "com.winget.gui",
    "productName": "Winget GUI",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist"
    ],
    "win": {
      "target": "nsis",
      "requestedExecutionLevel": "asInvoker",
      "icon": "assets/icons/wingetstudio.ico"
    }
  }
}
